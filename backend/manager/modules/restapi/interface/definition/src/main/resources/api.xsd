<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<xs:schema version="1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:jaxb="http://java.sun.com/xml/ns/jaxb"
           xmlns:xjc="http://java.sun.com/xml/ns/jaxb/xjc"
           jaxb:version="2.1" jaxb:extensionBindingPrefixes="xjc">

  <xs:annotation>
    <xs:appinfo>
      <jaxb:globalBindings generateIsSetMethod="true"/>
    </xs:appinfo>
  </xs:annotation>

  <!-- Links -->
  <xs:element name="keyValuePair" type="KeyValuePair"/>

  <xs:complexType name="KeyValuePair">
    <xs:sequence>
        <xs:element name="key" type="xs:string" minOccurs="0" maxOccurs="1"/>
        <xs:element name="value" type="xs:string" minOccurs="0" maxOccurs="1"/>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="linkCapabilities" type="LinkCapabilities"/>

  <xs:complexType name="LinkCapabilities">
	<xs:sequence>
	  <xs:element name="searchable" type="xs:boolean" minOccurs="0" maxOccurs="1"/>
	</xs:sequence>
  </xs:complexType>

  <xs:element name="detailedLink" type="DetailedLink"/>

  <xs:complexType name="DetailedLink">
    <xs:complexContent>
      <xs:extension base="Link">
        <xs:sequence>
          <xs:element ref="request" minOccurs="0" maxOccurs="1"/>
          <xs:element ref="response" minOccurs="0" maxOccurs="1"/>
          <xs:element ref="linkCapabilities" minOccurs="0" maxOccurs="1"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

 <xs:element name="detailedLinks" type="DetailedLinks"/>

  <xs:complexType name="DetailedLinks">
    <xs:sequence>
      <xs:annotation>
        <xs:appinfo>
          <jaxb:property name="links"/>
        </xs:appinfo>
      </xs:annotation>
      <xs:element type="DetailedLink" name="link" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="link" type="Link"/>

  <xs:complexType name="Link">
    <xs:attribute name="href" type="xs:string"/>
    <xs:attribute name="rel" type="xs:string"/>
  </xs:complexType>

  <!-- API -->

  <xs:element name="api" type="API"/>

  <xs:complexType name="API">
    <xs:complexContent>
      <xs:extension base="BaseResource">
        <xs:sequence>
          <xs:element ref="special_objects"/>
          <xs:element ref="product_info"/>
          <xs:element ref="summary"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:element name="special_objects" type="SpecialObjects"/>

  <xs:complexType name="SpecialObjects">
    <xs:complexContent>
      <xs:extension base="BaseResource">
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:element name="summary" type="ApiSummary"/>

  <xs:complexType name="ApiSummary">
    <xs:sequence>
      <xs:element ref="vms" minOccurs="0" maxOccurs="1">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="VMs"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element ref="hosts" minOccurs="0" maxOccurs="1"/>
      <xs:element ref="users" minOccurs="0" maxOccurs="1"/>
      <xs:element ref="storage_domains" minOccurs="0" maxOccurs="1"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Faults -->

  <xs:element name="fault" type="Fault"/>

  <xs:complexType name="Fault">
    <xs:sequence>
      <xs:element name="reason" type="xs:string"/>
      <xs:element name="detail" type="xs:string"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Actions -->

  <xs:complexType name="GracePeriod">
    <xs:sequence>
      <xs:element name="expiry" type="xs:long"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="IscsiDetails">
    <xs:sequence>
      <xs:choice>
        <xs:element name="initiator" type="xs:string"/>
        <xs:group ref="IscsiTarget"/>
      </xs:choice>
    </xs:sequence>
  </xs:complexType>

  <xs:group name="ActionParameterGroup">
    <xs:sequence>
      <xs:element name="grace_period" type="GracePeriod" minOccurs="0"/>
      <!-- for StorageDomain VM migrate action -->
      <xs:element name="host" type="Host" minOccurs="0"/>
      <!-- for host NIC attach action -->
      <xs:element name="network" type="Network" minOccurs="0"/>
      <!-- when installing a host, a root password is required -->
      <xs:element name="root_password" type="xs:string" minOccurs="0" maxOccurs="1"/>
      <!-- when installing a rhev-h host, an ISO image file is required -->
      <xs:element name="image" type="xs:string" minOccurs="0" maxOccurs="1"/>
      <!-- for host fence action -->
      <xs:element name="fence_type" type="xs:string" minOccurs="0"/>
      <!-- for VM ticket actions -->
      <xs:element name="ticket" type="Ticket" minOccurs="0"/>
      <!-- for Host ISCSI actions -->
      <xs:element name="iscsi" type="IscsiDetails" minOccurs="0"/>
      <!-- for VM import and export actions -->
      <xs:element name="storage_domain" type="StorageDomain" minOccurs="0"/>
      <!-- for VM import action -->
      <xs:element name="cluster" type="Cluster" minOccurs="0"/>
      <!-- for VM export action -->
      <xs:element name="discard_snapshots" type="xs:boolean" minOccurs="0"/>
      <xs:element name="exclusive" type="xs:boolean" minOccurs="0"/>
      <!-- For VM start -->
      <xs:element ref="vm" minOccurs="0" maxOccurs="1"/>
      <!-- A VM can be started paused -->
      <xs:element name="pause" type="xs:boolean" minOccurs="0" maxOccurs="1"/>
      <!-- should migration be forced if VM is pinned to host? -->
      <xs:element name="force" type="xs:boolean" minOccurs="0"/>
      <!-- ... etc., explicitly enumerate all the parameter types -->
	  <xs:element name="gluster_bricks" type="GlusterBricks" minOccurs="0" />
    </xs:sequence>
  </xs:group>

  <xs:group name="ActionResponseGroup">
    <xs:sequence>
      <!-- for Host ISCSI discovery action -->
      <xs:element name="iscsi_target" type="xs:string" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="IscsiTargets"/>
          </xs:appinfo>
        </xs:annotation>
      <!-- ... etc., explicitly enumerate all the response types -->
      </xs:element>
      <xs:element ref="power_management" minOccurs="0" maxOccurs="1"/>
      <!-- for Host fence status action  -->
    </xs:sequence>
  </xs:group>

  <!-- Represents a potentially asynchronous operation -->

  <xs:element name="action" type="Action"/>

  <xs:complexType name="Action">
    <xs:complexContent>
      <xs:extension base="BaseResource">
        <xs:sequence>
         <!-- The following are used by the client
              when initiating an operation -->
            <xs:element name="async" type="xs:boolean" minOccurs="0"/>
            <!-- action-specific parameter(s) for the operation
                 (if required) -->
            <xs:group ref="ActionParameterGroup"/>
            
          <!-- The following, and the BaseResource href/id attributes
               are used by the server when responding after an
               asynchronous operation or status query -->
            <xs:element ref="status" minOccurs="0" maxOccurs="1"/>
            <!-- Fault describing failure case -->
            <xs:element ref="fault" minOccurs="0" maxOccurs="1"/>
            <!-- action-specific response(s) for the operation
                 (if required) -->
            <xs:group ref="ActionResponseGroup"/>
            <!-- also link to original action (rel="replay") and
                 parent resource (rel="parent") -->
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="Actions">
    <xs:sequence>
      <xs:annotation>
        <xs:appinfo>
            <jaxb:property name="Links"/>
        </xs:appinfo>
      </xs:annotation>
      <xs:element ref="link" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="status" type="Status"/>

  <xs:complexType name="Status">
    <xs:sequence>
      <xs:element name="state" type="xs:string" minOccurs="1" maxOccurs="1"/>
      <xs:element name="detail" type="xs:string" minOccurs="0" maxOccurs="1"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Represents an asynchronous resource creation -->

  <xs:element name="creation" type="Creation"/>

  <xs:complexType name="Creation">
    <xs:complexContent>
      <xs:extension base="BaseResource">
        <xs:sequence>
          <xs:element ref="status" minOccurs="0" maxOccurs="1"/>
          <!-- Fault describing failure case -->
          <xs:element ref="fault" minOccurs="0" maxOccurs="1"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:element name="creation_states" type="CreationStates"/>

  <xs:complexType name="CreationStates">
    <xs:sequence>
      <xs:element name="creation_state" type="xs:string" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="CreationStates"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <!-- Statictics -->

  <xs:element name="statistic" type="Statistic"/>

  <xs:element name="statistics" type="Statistics"/>

  <xs:complexType name="Statistic">
    <xs:complexContent>
      <xs:extension base="BaseResource">
        <xs:sequence>
          <xs:element ref="values" minOccurs="1" maxOccurs="1"/>
          <xs:element name="type" type="StatisticType" minOccurs="1" maxOccurs="1"/>
		  <xs:element name="unit" type="StatisticUnit" minOccurs="1" maxOccurs="1"/>
          <!-- only one of the following entity references is set -->
          <xs:element ref="disk" minOccurs="0" maxOccurs="1"/>
          <xs:element ref="host" minOccurs="0" maxOccurs="1"/>
          <xs:element ref="host_nic" minOccurs="0" maxOccurs="1"/>
          <xs:element ref="nic" minOccurs="0" maxOccurs="1"/>
          <xs:element ref="vm" minOccurs="0" maxOccurs="1"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:simpleType name="StatisticType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="GAUGE"/>
      <xs:enumeration value="COUNTER"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="StatisticUnit">
    <xs:restriction base="xs:string">
      <xs:enumeration value="NONE"/>
      <xs:enumeration value="PERCENT"/>
      <xs:enumeration value="BYTES"/>
      <xs:enumeration value="SECONDS"/>
      <xs:enumeration value="BYTES_PER_SECOND"/>
      <xs:enumeration value="BITS_PER_SECOND"/>
      <xs:enumeration value="COUNT_PER_SECOND"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="Statistics">
    <xs:complexContent>
      <xs:extension base="BaseResources">
        <xs:sequence>
          <xs:annotation>
            <xs:appinfo>
                <jaxb:property name="Statistics"/>
            </xs:appinfo>
          </xs:annotation>
          <xs:element ref="statistic" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:element name="value" type="Value"/>

  <xs:element name="values" type="Values"/>

  <xs:complexType name="Value">
    <xs:sequence>
      <xs:element name="datum" type="xs:decimal" minOccurs="1" maxOccurs="1"/>
      <!-- will in the future also include a timestamp element,
           when historical data is supported -->
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="Values">
    <xs:sequence>
      <xs:annotation>
        <xs:appinfo>
            <jaxb:property name="Values"/>
        </xs:appinfo>
      </xs:annotation>
      <xs:element ref="value" minOccurs="1" maxOccurs="unbounded"/>
    </xs:sequence>
    <xs:attribute name="type" type="ValueType"/>
  </xs:complexType>

  <xs:simpleType name="ValueType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="INTEGER"/>
      <xs:enumeration value="DECIMAL"/>
    </xs:restriction>
  </xs:simpleType>

  <!-- CPUs -->

  <xs:element name="cpu" type="CPU"/>

  <xs:complexType name="CpuTopology">
    <xs:attribute name="sockets" type="xs:int"/>
    <xs:attribute name="cores" type="xs:int"/>
  </xs:complexType>

  <xs:complexType name="CPU">
    <xs:sequence>
      <xs:element name="topology" type="CpuTopology" minOccurs="0"/>
      <xs:element name="level" type="xs:int" minOccurs="0"/>
      <xs:element name="name" type="xs:string" minOccurs="0" maxOccurs="1"/>
      <xs:element name="speed" type="xs:decimal" minOccurs="0" maxOccurs="1"/>
    </xs:sequence>
    <xs:attribute name="id" type="xs:string"/>
  </xs:complexType>

  <xs:complexType name="CPUs">
    <xs:sequence>
      <xs:annotation>
        <xs:appinfo>
            <jaxb:property name="CPUs"/>
        </xs:appinfo>
      </xs:annotation>
      <xs:element ref="cpu" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Version numbers -->

  <xs:element name="version" type="Version"/>

  <xs:complexType name="Version">
    <xs:sequence/>
    <xs:attribute name="major" type="xs:unsignedShort"/>
    <xs:attribute name="minor" type="xs:unsignedShort"/>
    <xs:attribute name="build" type="xs:unsignedShort"/>
    <xs:attribute name="revision" type="xs:unsignedShort"/>
    <xs:attribute name="full_version" type="xs:string"/>
  </xs:complexType>

  <xs:element name="product_info" type="ProductInfo"/>

  <xs:complexType name="ProductInfo">
    <xs:complexContent>
      <xs:extension base="BaseResource">
        <xs:sequence>
          <xs:element name="vendor" type="xs:string" minOccurs="0" maxOccurs="1"/>
          <xs:element ref="version" minOccurs="0" maxOccurs="1"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="SupportedVersions">
    <xs:sequence>
      <xs:element name="version" type="Version" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="Versions"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="ErrorHandling">
    <xs:sequence>
      <xs:element name="on_error" type="xs:string" minOccurs="0" maxOccurs="1">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="onError"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <!-- Capabilities -->

  <xs:element name="capabilities" type="Capabilities"/>

  <xs:complexType name="VersionCaps">
    <xs:complexContent>
      <xs:extension base="Version">
        <xs:sequence>
          <xs:element name="current" type="xs:boolean" minOccurs="0"/>
          <xs:element name="features" type="Features" minOccurs="0"/>
          <xs:element name="cpus" type="CPUs" minOccurs="0">
            <xs:annotation>
              <xs:appinfo>
                <jaxb:property name="CPUs"/>
              </xs:appinfo>
            </xs:annotation>
          </xs:element>
          <xs:element ref="power_managers" minOccurs="0"/>
          <xs:element ref="fence_types" minOccurs="0"/>
          <xs:element ref="storage_types" minOccurs="0"/>
          <xs:element ref="storage_domain_types" minOccurs="0"/>
          <xs:element ref="vm_types" minOccurs="0"/>
          <xs:element ref="boot_devices" minOccurs="0"/>
          <xs:element ref="display_types" minOccurs="0"/>
          <xs:element ref="nic_interfaces" minOccurs="0"/>
          <xs:element ref="disk_types" minOccurs="0"/>
          <xs:element ref="os_types" minOccurs="0"/>
          <xs:element ref="disk_formats" minOccurs="0"/>
          <xs:element ref="disk_interfaces" minOccurs="0"/>
          <xs:element ref="vm_affinities" minOccurs="0"/>
          <xs:element name="custom_properties" type="CustomProperties" minOccurs="0"/>
          <xs:element ref="boot_protocols" minOccurs="0"/>
          <xs:element ref="error_handling" minOccurs="0"/>
          <xs:element ref="storage_formats" minOccurs="0"/>
          <xs:element ref="creation_states" minOccurs="0"/>
          <xs:element ref="power_management_states" minOccurs="0"/>
          <xs:element ref="host_states" minOccurs="0"/>
          <xs:element ref="host_non_operational_details" minOccurs="0"/>
          <xs:element ref="network_states" minOccurs="0"/>
          <xs:element ref="storage_domain_states" minOccurs="0"/>
          <xs:element ref="template_states" minOccurs="0"/>
          <xs:element ref="vm_states" minOccurs="0"/>
          <xs:element ref="vm_pause_details" minOccurs="0"/>
          <xs:element ref="disk_states" minOccurs="0"/>
          <xs:element ref="host_nic_states" minOccurs="0"/>
          <xs:element ref="data_center_states" minOccurs="0"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="Capabilities">
    <xs:sequence>
      <xs:element name="version" type="VersionCaps" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="Versions"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="permits" type="Permits" minOccurs="0"/>
      <xs:element name="scheduling_policies" type="SchedulingPolicies" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="scheduling_policies" type="SchedulingPolicies"/>

  <xs:complexType name="SchedulingPolicies">
    <xs:sequence>
      <xs:element name="policy" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="features" type="Features"/>

  <xs:complexType name="Features">
    <xs:sequence>
      <xs:element ref="transparent_hugepages" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="fence_types" type="FenceTypes"/>

  <xs:complexType name="FenceTypes">
    <xs:sequence>
      <xs:element name="fence_type" type="xs:string" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="FenceTypes"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="storage_types" type="StorageTypes"/>

  <xs:complexType name="StorageTypes">
    <xs:sequence>
      <xs:element name="storage_type" type="xs:string" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="StorageTypes"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="storage_domain_types" type="StorageDomainTypes"/>

  <xs:complexType name="StorageDomainTypes">
    <xs:sequence>
      <xs:element name="storage_domain_type" type="xs:string" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="StorageDomainTypes"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="vm_types" type="VmTypes"/>

  <xs:complexType name="VmTypes">
    <xs:sequence>
      <xs:element name="vm_type" type="xs:string" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="VmTypes"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="boot_devices" type="BootDevices"/>

  <xs:complexType name="BootDevices">
    <xs:sequence>
      <xs:element name="boot_device" type="xs:string" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="BootDevices"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="display_types" type="DisplayTypes"/>

  <xs:complexType name="DisplayTypes">
    <xs:sequence>
      <xs:element name="display_type" type="xs:string" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="DisplayTypes"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="nic_interfaces" type="NicInterfaces"/>

  <xs:complexType name="NicInterfaces">
    <xs:sequence>
      <xs:element name="nic_interface" type="xs:string" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="NicInterfaces"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="disk_types" type="DiskTypes"/>

  <xs:complexType name="DiskTypes">
    <xs:sequence>
      <xs:element name="disk_type" type="xs:string" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="DiskTypes"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="os_types" type="OsTypes"/>

  <xs:complexType name="OsTypes">
    <xs:sequence>
      <xs:element name="os_type" type="xs:string" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="OsTypes"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="disk_formats" type="DiskFormats"/>

  <xs:complexType name="DiskFormats">
    <xs:sequence>
      <xs:element name="disk_format" type="xs:string" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="DiskFormats"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="disk_interfaces" type="DiskInterfaces"/>

  <xs:complexType name="DiskInterfaces">
    <xs:sequence>
      <xs:element name="disk_interface" type="xs:string" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="DiskInterfaces"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="vm_affinities" type="VmAffinities"/>

  <xs:complexType name="VmAffinities">
    <xs:sequence>
      <xs:element name="affinity" type="xs:string" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="VmAffinities"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="boot_protocols" type="BootProtocols"/>

  <xs:complexType name="BootProtocols">
    <xs:sequence>
      <xs:element name="boot_protocol" type="xs:string" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="BootProtocols"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

    <xs:element name="error_handling" type="ErrorHandlingOptions"/>

  <xs:complexType name="ErrorHandlingOptions">
    <xs:sequence>
      <xs:element name="on_error" type="xs:string" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:appinfo>
            <jaxb:property name="ErrorHandling"/>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="storage_formats" type="StorageFormats"/>

